<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_query_machine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sridatta.fireapp.QueryMachine">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="         Search Book"
        style="@style/Widget.AppCompat.EditText"
        android:textSize="34sp"
        android:id="@+id/et_search"
        android:inputType="text"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_publisher"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp" />

    <Button
        android:text="titile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_bookTitle"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textSize="30sp"
        android:layout_above="@+id/button9btn_author"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp" />

    <Button
        android:text="Author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9btn_author"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textSize="30sp"
        android:layout_marginBottom="94dp"
        android:layout_alignBottom="@+id/btn_publisher"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
